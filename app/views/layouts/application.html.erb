<!DOCTYPE html>
<html>
<head>
  <title>BaseProyecto</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
	<div class="navbar navbar-default navbar-fixed-top" role="navegation">
  		<div class="container">
    		<a href="#" class="navbar-brand">NOMBRE DE PROYECTO</a>
    		<ul class="nav navbar-nav">
    			<li class="active"><%= link_to "Home", home_index_path%></li>
    			<li class="active"><%= link_to "Directorios", directories_path%></li>
    		</ul>
        <ul class="nav navbar-nav pull-right">
          <% if user_signed_in? %>
              <li class="dropdown">
                 <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= current_user.nombre_completo %></span></a>
                  <ul class="dropdown-menu" role="menu">
                    <li><%= link_to "Editar perfil", edit_user_registration_path %></li>
                    <li><%= link_to "dashboard", dashboard_index_path%></li>
                  </ul>
              </li>
              <li><%= link_to "Cerrar sesion", destroy_user_session_path, method: :delete %></li>
          <% else %>
               <li><%= link_to "Registar", new_user_registration_path%></li>
               <li><%= link_to "Iniciar sesion", new_user_session_path, method: :delete %></li>
          <% end %>
        </ul>

 		</div>
	</div
		<%= yield %>
	
 <footer>
    <div class="footer">
      <h2 class="text-center">Footer 2015</h2>
    </div>  
 </footer>
</body>
</html>
