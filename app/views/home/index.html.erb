  <body>
    <div class="container-fluid">
      <div class="row">
          <header>
            <div class="embed-responsive embed-responsive-16by9">
              <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/myuv6HaixrE?autoplay=1&controls=0&disablekb=1&loop=1"></iframe>
              <div class="cabecera text-center">
                <h1>BETA APP</h1>
                <h2>Unete a nuestro directorio de empresas es gratis.</h2>
              </div>
            </div>
          </header>

        <% if user_signed_in? %>
        <% else %>
        <div class="text-center ingreso col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <input class="login" type="text" placeholder="Usuario" required>
          </div>
          <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <input class="login" type="text" placeholder="Contraseña" required>
          </div>
          <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <button class="login" class="btn">Ingresar</button>
          </div>
          <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <span class="registrar-link">
              <strong>
                <%=link_to "Registrar", new_user_registration_path %>
              </strong>
            </span>
          </div>
        </div>
        <% end %>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <h1 class="text-center">¿Qué necesitas?</h1>
          <form class="text-center formulario" action="">
            <input type="text" class="input-lg" placeholder="Categoría">
            <input type="text" class="input-lg" placeholder="Lugar">
            <button class="btn btn-lg">Buscar</button>
          </form>
        </div>
      </div>
    </div>

      <div role="tabpanel">

        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Tipo 1</a></li>

          <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Tipo 2</a></li>

          <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Tipo 3</a></li>

          <li role="presentation"><a href="#settings" aria-controls="settings" role="tab" data-toggle="tab">Tipo 4</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="home"><%= render 'form1' %></div>
          <div role="tabpanel" class="tab-pane" id="profile"><%= render 'form2' %></div>
          <div role="tabpanel" class="tab-pane" id="messages"><%= render 'form3' %></div>
          <div role="tabpanel" class="tab-pane" id="settings"><%= render 'form4' %></div>
        </div>


  </div>    
  <!-- Latest compiled and minified JavaScript -->
  <script src="http://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
 
  </body>